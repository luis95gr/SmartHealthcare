<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- Base application theme. -->



    <style name="Registration"></style>

    <style name="Registration.desc" parent="Registration">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Registration.personinfo" parent="Registration" />
    <style name="Registration.text" parent="Registration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/regist_input_rb_back</item>
        <item name="android:textColorHint">#55000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Registration.personinfo.itemEditTextView" parent="Registration.personinfo">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/edtbgd_changeinfo_name</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#55000000</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Registration.edittext" parent="Registration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/regist_input_rb_back</item>
        <item name="android:textColorHint">#55000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="registerInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black_translation</item>
        <item name="android:textColorHint">#666</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name ="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_slash </item>
    </style>

</resources>
