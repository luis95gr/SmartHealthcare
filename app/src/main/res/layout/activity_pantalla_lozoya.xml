<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Registros">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#01FFFFFF"
            android:layout_below="@id/linearDias"
            />

        <!-- DIAS       -->
        <LinearLayout
            android:id="@+id/linearDias"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_monday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="LUN"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />

            <TextView
                android:id="@+id/text_tuesday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MAR"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
            <TextView
                android:id="@+id/text_wednesday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MIE"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
            <TextView
                android:id="@+id/text_thursday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="JUE"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
            <TextView
                android:id="@+id/text_friday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VIE"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
            <TextView
                android:id="@+id/text_saturday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SAB"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
            <TextView
                android:id="@+id/text_sunday"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DOM"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:visibility="visible"
                app:layout_constraintHorizontal_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearUp"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/border"
            android:layout_height="100dp">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/imageButtonSen"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/sentad2"
                android:layout_width="60dp"
                android:background="@drawable/border_imagen"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textV"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Rango de Mediciones: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textValue"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100%"/>
                </LinearLayout>

                <android.support.v7.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:id="@+id/seek"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:min="1"
                    android:progress="100"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textS"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Total Pasos: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textSV"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"/>

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearUp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/one"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_weight=".5">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight=".5"
                        android:background="@drawable/border" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".5"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart3"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:layout_gravity="left"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight=".5"
                        android:background="@drawable/border" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart4"
                        android:layout_width="match_parent"
                        android:layout_height="235dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight=".5"
                        android:background="@drawable/border" />
                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_titleInt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________Fatiga_______________________"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        />

    <de.codecrafters.tableview.TableView
        xmlns:table="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".5"
        android:divider="@color/black"
        table:tableView_columnCount="3"
        table:tableView_headerColor="@color/md_blue_A400" />
    <TextView
        android:id="@+id/text_titleInt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="______________________Mood_______________________"
        android:textAlignment="center"
        android:layout_marginTop="3dp"
        android:textSize="15dp"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear3"
        />

    <de.codecrafters.tableview.TableView
        xmlns:table="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tableView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight=".5"
        android:layout_marginLeft="1dp"
        android:divider="@color/black"
        table:tableView_headerColor="@color/md_blue_A400"
        android:layout_marginRight="1dp"
        android:layout_marginTop="3dp"
        table:tableView_columnCount="3" />
</LinearLayout>

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSend"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        android:backgroundTint="#81d298"
        android:src="@android:drawable/ic_menu_view"
        />
</android.support.constraint.ConstraintLayout>