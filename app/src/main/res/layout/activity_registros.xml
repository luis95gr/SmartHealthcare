<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registros">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/linearDias"
        />

    <!-- DIAS       -->
    <LinearLayout
        android:id="@+id/linearDias"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_monday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LUN"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />

        <TextView
            android:id="@+id/text_tuesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MAR"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_wednesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MIE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_thursday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="JUE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_friday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VIE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_saturday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SAB"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_sunday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DOM"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/registros"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="150dp"
        android:id="@+id/linearImage"
        android:orientation="horizontal"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!-- 1RA INFORMACION///////////////////////////-->

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/linearImage">


            <TextView
                android:id="@+id/txtBR"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="80dp"
                android:text="BR"
                android:textSize="14dp"
                android:background="@drawable/round_border_statistics"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:clickable="true"
                />

        <TextView
            android:id="@+id/txtHR"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="80dp"
            android:text="HR"
            android:textSize="14dp"
            android:background="@drawable/round_border_statistics"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtBP"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="80dp"
            android:textSize="14dp"
            android:background="@drawable/round_border_statistics"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="BP"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />

    </LinearLayout>

    <!-- 2DA INFORMACION///////////////////////////-->
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/linear1">

        <TextView
            android:id="@+id/txtECG"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="80dp"
            android:text="ECG"
            android:textSize="14dp"
            android:background="@drawable/round_border_statistics"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtFatiga"
            android:layout_width="0dp"
            android:textSize="14dp"
            android:background="@drawable/round_border_statistics"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_weight="5"
            android:layout_height="80dp"
            android:text="Fatiga"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/txtMood"
            android:layout_width="0dp"
            android:textSize="14dp"
            android:background="@drawable/round_border_statistics"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_weight="5"
            android:layout_height="80dp"
            android:text="Humor"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>