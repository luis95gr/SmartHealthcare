<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_blue_50"
    tools:context=".PopUp"
    android:id="@+id/popup">

    <!--  TITLES  -->
    <TextView
        android:id="@+id/textBRtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu Frecuencia Respiratoria es: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textBPtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu Presión Sanguínea es: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textMoodTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu estado de ánimo actual es: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textFatigueTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu nivel de fatiga es: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textHRTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tu Ritmo Cardiaco es: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textStepsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad de pasos: "
        android:visibility="invisible"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--  TITLES END  -->

    <!--  MEASURES -->
    <TextView
        android:id="@+id/textMeasureBr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />

    <TextView
        android:id="@+id/textMeasureBp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />

    <TextView
        android:id="@+id/textMeasureMood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />

    <TextView
        android:id="@+id/textMeasureFatigue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />

    <TextView
        android:id="@+id/textMeasureHR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />

    <TextView
        android:id="@+id/textMeasureSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/circle_timer_empty"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFatigueTitle"
        />
    <!--  MEASURES END -->

    <!--  INFO TEXT -->

    <LinearLayout
        android:id="@+id/linearM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textMeasureBp"
        >
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text=""
            />
        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textSize="16sp"
            android:text=""
        />

    </LinearLayout>

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""
        />

    <!--  INFO TEXT END -->


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        ></View>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        ></View>


    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        >

        <!--  EMPTY TEXTS  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textEAge"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=" Edad: "
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/textEGender"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Género: "
            android:textColor="@color/black"
            android:paddingVertical="1dp"
            />
        <TextView
            android:id="@+id/textEWeight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Peso: "
            android:textColor="@color/black"
            android:paddingVertical="1dp"
            />
        <TextView
            android:id="@+id/textEHeight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=" Altura: "
            android:textColor="@color/black"
            android:paddingVertical="1dp"
            />
    </LinearLayout>
        <!--  TEXT SHARED PREFERENCES CONTAINERS  -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/textGender"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/textWeight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/blue"
        />
    <TextView
        android:id="@+id/textHeight"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/blue"
        />

    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>