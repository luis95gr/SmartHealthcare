<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#10FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/linearDias"
        />

    <!-- DIAS       -->
    <LinearLayout
        android:id="@+id/linearDias"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_monday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LUN"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />

        <TextView
            android:id="@+id/text_tuesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MAR"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_wednesday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MIE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_thursday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="JUE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_friday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VIE"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_saturday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SAB"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />
        <TextView
            android:id="@+id/text_sunday"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DOM"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:visibility="visible"
            app:layout_constraintHorizontal_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/linear"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBR"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BR"
                    android:backgroundTint="#A4A4A4"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    />
                <Button
                    android:id="@+id/btnHR"
                    android:backgroundTint="#A4A4A4"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="HR" />
                <Button
                    android:id="@+id/btnBPmax"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#A4A4A4"
                    android:layout_height="wrap_content"
                    android:text="BPmax"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"

                    />
                <Button
                    android:id="@+id/btnBPmin"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A4A4A4"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="BPmin" />

                <Button
                    android:id="@+id/btnMood"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A4A4A4"
                    android:text="Mood"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"

                    />
                <Button
                    android:id="@+id/btnFatigue"
                    android:background="@drawable/round_border_statistics"
                    android:layout_width="wrap_content"
                    android:backgroundTint="#A4A4A4"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:text="Fatigue" />
            </LinearLayout>


        </HorizontalScrollView>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.github.mikephil.charting.charts.LineChart
        android:layout_marginTop="30dp"
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.github.mikephil.charting.charts.PieChart
        android:layout_marginTop="30dp"
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</android.support.constraint.ConstraintLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/min_value"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="MIN: ---"
            android:layout_margin="5dp"
            android:background="@drawable/border_profile"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/linear"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/avg_value"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="AVG: ---"
            android:layout_margin="5dp"
            android:background="@drawable/border_profile"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintLeft_toRightOf="@id/min_value"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/max_value"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="MAX: ---"
            android:layout_margin="5dp"
            android:background="@drawable/border_profile"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintLeft_toRightOf="@id/avg_value"
            android:clickable="true"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>